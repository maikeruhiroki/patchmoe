# PatchMoE Docker環境設定ファイル
# このファイルをコピーして .env として使用してください

# GPU設定
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# 開発環境設定
PYTHONPATH=/workspace
PYTHONUNBUFFERED=1

# CUDA設定
CUDA_HOME=/usr/local/cuda
CUDA_VISIBLE_DEVICES=0

# Jupyter設定
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=

# TensorBoard設定
TENSORBOARD_PORT=6006

# データパス設定
DATA_PATH=/workspace/data
OUTPUT_PATH=/workspace/outputs
MEDICAL_DATASETS_PATH=/workspace/medical_datasets
REAL_MEDICAL_DATASETS_PATH=/workspace/real_medical_datasets
REAL_MEDICAL_DATASETS_KAGGLE_PATH=/workspace/real_medical_datasets_kaggle
TEST_DATA_PATH=/workspace/test_data

# Kaggle設定
KAGGLE_USERNAME=
KAGGLE_KEY=

# 学習設定
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100
MODEL_NAME=patchmoe

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/workspace/logs/training.log
